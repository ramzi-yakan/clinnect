<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEmployee"
    android:background="#90cca5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstLayer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/clinnectlogo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/employeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name goes here or username"
                    android:textSize="15sp"
                    app:fontFamily="@font/marko_one" />

                <TextView
                    android:id="@+id/clinicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/employeeName"
                    android:layout_weight="1"
                    android:text="Clinic Name goes here"
                    android:textSize="15sp"
                    app:fontFamily="@font/marko_one" />

                <TextView
                    android:id="@+id/clinicAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/clinicName"
                    android:layout_weight="1"
                    android:text="Clinic Address goes here"
                    android:textSize="15sp"
                    app:fontFamily="@font/marko_one" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLayer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/personalInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Personal Information"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    app:fontFamily="@font/marko_one" />

                <Button
                    android:id="@+id/manageButtonPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/personalInfoText"
                    android:layout_marginLeft="125dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:text="Manage Personal Info"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/licenseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/manageButtonPersonal"
                    android:layout_marginBottom="5dp"
                    android:text="Licensing"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:fontFamily="@font/marko_one" />

                <TextView
                    android:id="@+id/licensingValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/licenseText"
                    android:layout_marginBottom="10dp"
                    android:text="License Value goes here"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:fontFamily="@font/marko_one" />

                <TextView
                    android:id="@+id/generalDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/licensingValue"
                    android:layout_marginBottom="5dp"
                    android:maxLines="4"
                    android:text="General Description"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:fontFamily="@font/marko_one" />

                <TextView
                    android:id="@+id/generalDescriptionValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/generalDescriptionText"
                    android:text="General Description value goes here"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:fontFamily="@font/marko_one" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/twofiveLayer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/offeredServicesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Offered Services"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    app:fontFamily="@font/marko_one" />

                <Button
                    android:id="@+id/manageServicesEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/offeredServicesText"
                    android:layout_marginLeft="125dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_rounded"
                    android:text="Manage Services"
                    android:textAlignment="center" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twofivesevenLayer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/servicesYouText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your offered services"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        app:fontFamily="@font/marko_one" />

                    <TextView
                        android:id="@+id/servicesAdminText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin offered services"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        app:fontFamily="@font/marko_one" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdLayer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/listServicesByYou"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="true" />

                    <ListView
                        android:id="@+id/listServicesAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="true" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLayer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/availabilityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Availability"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    app:fontFamily="@font/marko_one" />

                <Button
                    android:id="@+id/ManageButtonAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/availabilityText"
                    android:layout_marginLeft="125dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_rounded"
                    android:onClick="onClickManageAvailability"
                    android:text="Manage Availabilities"
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ManageButtonAvailability"
                    android:text="Your availabilities"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:fontFamily="@font/marko_one" />

                <ListView
                    android:id="@+id/listOfAvailabilities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView18"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>